{
    "name": "victorybiz/simple-livewire-select",
    "description": "Simple Blade/Livewire Select inputs component.",
    "keywords": [
        "victorybiz",
        "simple-livewire-select"
    ],
    "homepage": "https://github.com/victorybiz/simple-livewire-select",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Victory Osayi Airuoyuwa",
            "email": "lavictorybiz@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "illuminate/support": "^8.0",
        "livewire/livewire": "^2.4"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Victorybiz\\SimpleLivewireSelect\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Victorybiz\\SimpleLivewireSelect\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Victorybiz\\SimpleLivewireSelect\\SimpleLivewireSelectServiceProvider"
            ],
            "aliases": {
                "SimpleLivewireSelect": "Victorybiz\\SimpleLivewireSelect\\SimpleLivewireSelectFacade"
            }
        }
    }
}
